{
    "compilerOptions": {
        "rootDirs": ["src"],
        "outDir": "dist",
        "target": "ES2021",
        "lib": ["ES2021"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "types": ["Node"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "useUnknownInCatchVariables": false
    }
}